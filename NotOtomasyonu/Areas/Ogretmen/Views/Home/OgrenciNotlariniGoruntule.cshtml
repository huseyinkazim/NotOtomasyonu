@model IEnumerable<NotOtomasyonu.NotDb>
@using NotOtomasyonu.Models
@{
    ViewBag.Title = "OgrenciNotlariniGoruntule";
}
<link href="~/Content/OgrenciNotlariniGoruntule.css" rel="stylesheet" type="text/css" />
@{
    <div class="tabloDiv">
        <table class="table table-striped">
            @Html.AntiForgeryToken()
            <tr>
                <th>Öğrenci No</th>
                <th>Öğrenci Adı & Soyadı</th>
                <th>DersNo</th>
                <th>Sınav1</th>
                <th>Sınav2</th>
                <th>Sınav3</th>
                <th>Sözlü1</th>
                <th>Sözlü2</th>
                <th>Sözlü3</th>
                <th>Not Ortalaması</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">Ders Yok</td>
                </tr>
            }
            else
            {
                foreach (NotDb aNot in Model)
                {
                    <tr>
                        <th>@Html.ActionLink(aNot.OgrenciNo, "OgrenciNotlariniGuncelle", new { notId = aNot.NotId, dersId = aNot.DersId }, new { @class = "btn btn-custom4 btn-sm" })</th>
                        <th>@aNot.OgrenciDb.Ad @aNot.OgrenciDb.Soyad</th>
                        <th>@aNot.DersId</th>
                        <th>@aNot.Sinav1</th>
                        <th>@aNot.Sinav2</th>
                        <th>@aNot.Sinav3</th>
                        <th>@aNot.Sozlu1</th>
                        <th>@aNot.Sozlu2</th>
                        <th>@aNot.Sozlu3</th>
                        <th>@Html.NotHesapla(aNot)</th>
                    </tr>
                }
            }
        </table>
    </div>
}
